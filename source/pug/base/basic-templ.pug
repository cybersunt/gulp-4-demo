include mixins
block vars

<!-- Doctype HTML5 -->
doctype html
html(lang='ru')
  head
    // Задаем кодировку для страницы
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width')
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,600&subset=cyrillic" rel="stylesheet")

    link(href='css/style.css' rel='stylesheet')
    // SEO Задание тега Title
    title #{title}
    // SEO Задание тега Description
    meta(name='description', content=description)

  body
    div.hidden
      include ../../img/sprite.svg
    header.page-header
      .__wrap
        //- logotype
        +logo('page-header', 'logo', 'Логотип в хедере', 90, 90)

        //- navigation
        +mainNav
        //- social links
        +socialLinks

    block content

    footer.page-footer
      .__wrap
        //- copyright
        .copyright &copy; Copyright 2019. Made in Russia

    block forms

    script(src='js/app.js')

    block script
