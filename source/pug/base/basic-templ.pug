include mixins
block vars

<!-- Doctype HTML5 -->
doctype html
html(lang='ru')
  head
    // Задаем кодировку для страницы
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width')
    //- link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,600&subset=cyrillic" rel="stylesheet")

    //- link(href='css/style.css' rel='stylesheet')
    // SEO Задание тега Title
    title #{title}
    // SEO Задание тега Description
    meta(name='description', content=description)

  body
    header.page-header
      .__wrap
        //- logotype
        +logo('page-header', 'logoN', 'Логотип в хедере', 150, 60) 
        //- navigation
        +mainNav

    block content

    footer.page-footer
      .__wrap
        //- copyright
        .copyright &copy; Copyright 2018. Made in Russia
        //- logotype
        +logo('page-footer', 'logoN', 'Логотип в футере', 100, 40)
        //- social links
        +socialLinks
